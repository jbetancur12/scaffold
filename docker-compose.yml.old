version: '3.8'

services:
  postgres:
    image: postgres:16-alpine
    restart: always
    ports:
      - "5433:5432"
    environment:
      POSTGRES_USER: ${DB_USER:-postgres}
      POSTGRES_PASSWORD: ${DB_PASSWORD:-postgres}
      POSTGRES_DB: ${DB_NAME:-scaffold_db}
    volumes:
      - postgres_data:/var/lib/postgresql/data
    networks:
      - scaffold_network

  redis:
    image: redis:7-alpine
    restart: always
    ports:
      - "6379:6379"
    volumes:
      - redis_data:/data
    networks:
      - scaffold_network

volumes:
  postgres_data:
  redis_data:


networks:
  scaffold_network:
    driver: bridge

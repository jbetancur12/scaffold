# Server Configuration
NODE_ENV=development
PORT=5000
FRONTEND_URL=http://localhost:3000

# Database (PostgreSQL)
# Format: postgresql://USER:PASSWORD@HOST:PORT/DB_NAME
DATABASE_URL=postgresql://postgres:postgres@localhost:5433/scaffold_db

# Redis
# Format: redis://HOST:PORT
REDIS_URL=redis://localhost:6379

# Authentication (JWT)
# Use a strong random string (32+ chars) for production
JWT_SECRET=this_is_a_very_long_and_secure_secret_for_development
JWT_ACCESS_EXPIRATION=15m
JWT_REFRESH_EXPIRATION=7d
